#!/bin/bash

umount $1

mkfs.btrfs -f $1

UNIT="var-snap-$(echo ${SNAP_NAME} | sed -e "s/-/\\\x2d/g")-common-lxc.mount"

echo "[Unit]
Description = BTRFS mount

[Mount]
What = $1
Where = /var/snap/$SNAP_NAME/common/lxc
Type = btrfs

[Install]
WantedBy = multi-user.target" > /writable/system-data/etc/systemd/system/$UNIT

systemctl daemon-reload
systemctl start $UNIT
systemctl enable $UNIT

mkdir -p $SNAP_DATA/../common/lxc/tmpdir

$SNAP/bin/btrfs quota enable $SNAP_DATA/../common/lxc/tmpdir

echo -e "\nalias sudo='sudo '\nif [ -f $SNAP/etc/bash_completion ]; then . $SNAP/etc/bash_completion; fi" >> /root/.bashrc
if [ -d /home/subutai ]; then echo -e "\nalias sudo='sudo '\nif [ -f $SNAP/etc/bash_completion ]; then . $SNAP/etc/bash_completion; fi" >> /home/subutai/.bashrc; fi
if [ -d /home/ubuntu ]; then echo -e "\nalias sudo='sudo '\nif [ -f $SNAP/etc/bash_completion ]; then . $SNAP/etc/bash_completion; fi" >> /home/ubuntu/.bashrc; fi
